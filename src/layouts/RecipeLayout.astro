---
import { Image } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";
import { RecipeInfoPanel, InteractiveIngredients } from "../components/recipes";
const { frontmatter } = Astro.props;
const { title, image, prepTime, cookTime, servings, difficulty, ingredients } =
    frontmatter;
---

<BaseLayout {frontmatter}>
    <article class="recipe-page">
        <header class="recipe-header">
            <h1>{title}</h1>
            <p class="description">{frontmatter.description}</p>
        </header>

        <div class="recipe-grid">
            <div class="main-column">
                <Image
                    src={image.src}
                    alt={image.alt}
                    width={800}
                    height={500}
                    class="recipe-image"
                />
                <RecipeInfoPanel
                    {prepTime}
                    {cookTime}
                    {servings}
                    {difficulty}
                />
            </div>
            <div class="sidebar-column">
                <InteractiveIngredients
                    ingredients={ingredients}
                    baseServings={servings}
                />
            </div>
        </div>

        <section class="instructions">
            <h2>Modo de Preparo</h2>
            <div class="instructions-content">
                <slot />
            </div>
        </section>
    </article>
</BaseLayout>
<style>
    .recipe-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .recipe-header h1 {
        font-family: var(--font-display);
        font-size: 3rem;
        color: #3d3522;
    }

    .recipe-header .description {
        font-family: var(--font-text);
        font-size: 1.1rem;
        color: #555;
        max-width: 60ch;
        margin: 0.5rem auto 0;
    }

    .recipe-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 900px) {
        .recipe-grid {
            grid-template-columns: 2fr 1fr;
        }
    }

    .recipe-image {
        width: 100%;
        height: auto;
        border-radius: 16px;
    }

    .instructions {
        margin-top: 3rem;
    }

    .instructions h2 {
        font-family: var(--font-display);
    }

    .instructions-content {
        font-family: var(--font-text);
        font-size: 1.1rem;
        line-height: 1.8;
    }

    :global(.instructions-content ol) {
        padding-left: 20px;
    }

    :global(.instructions-content li) {
        margin-bottom: 1.5rem;
    }

    :global(.instructions-content strong) {
        font-weight: 700;
        color: #3d3522;
    }
</style>
