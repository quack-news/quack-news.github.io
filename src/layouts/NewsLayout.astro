---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import { NewsMetadata } from "../components/news";
import { Image } from "astro:assets";

type News = CollectionEntry<"noticias">;
type Frontmatter = News["data"];

interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props;
const { title, description, image } = frontmatter;
---

<BaseLayout {frontmatter}>
  <header class="article-header">
    <div class="image-container">
      <Image src={image.src} alt={image.alt} class="hero-image" />
    </div>

    <div class="text-container">
      <span class="accent-line"></span>
      <h1 class="hero-title">{title}</h1>
      <p class="hero-dek">{description}</p>
    </div>
  </header>

  <NewsMetadata {frontmatter} />

  <article class="news-article">
    <slot />
  </article>
</BaseLayout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;800&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap");

  .article-header {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
    max-width: 1100px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .article-header {
      grid-template-columns: 1fr 1.2fr;
    }
  }

  .image-container {
    animation: slideInLeft 1s ease-out both;
  }
  .hero-image {
    width: 100%;
    height: auto;
    aspect-ratio: 4/3;
    object-fit: cover;
    border-radius: 16px;
    box-shadow: 12px 12px 0px #ffd700;
    border: 2px solid #3d3522;
  }

  .text-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .accent-line {
    display: block;
    width: 80px;
    height: 5px;
    background: linear-gradient(90deg, #ff8a00, #e52e71);
    border-radius: 5px;
    margin-bottom: 1.5rem;
    animation: draw-line 1s 0.3s ease-out both;
  }

  .hero-title {
    font-family: "Poppins", sans-serif;
    font-weight: 800;
    font-size: clamp(2.2rem, 6vw, 3.5rem);
    color: #3d3522;
    line-height: 1.1;
    margin: 0;
    animation: slideInUp 0.8s 0.5s ease-out both;
  }

  .hero-dek {
    font-family: "Poppins", sans-serif;
    font-size: 1.1rem;
    color: #555;
    margin: 1rem 0 0 0;
    animation: slideInUp 0.8s 0.7s ease-out both;
  }

  .news-article {
    font-family: "Inter", sans-serif;
    text-align: justify;
    line-height: 1.8;
    font-size: 1.1rem;
    max-width: 75ch;
    margin: 0 auto;
    padding: 0 1rem;
    animation: fadeInUp 1s 1s ease-out both;
  }

  .news-article > :global(p:first-of-type::first-letter) {
    font-family: "Poppins", sans-serif;
    font-weight: 800;
    font-size: 4em;
    float: left;
    margin-right: 0.1em;
    line-height: 0.8;
    color: #3d3522;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes draw-line {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }
</style>
