---
import { type CollectionEntry, getCollection } from 'astro:content';
import MediaLayout from '../../layouts/MediaLayout.astro';

export async function getStaticPaths() {
  const mediaEntries = await getCollection('midias', ({ data }) => !data.draft);
  return mediaEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'midias'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<MediaLayout frontmatter={entry.data}>
  <Content />
</MediaLayout>
