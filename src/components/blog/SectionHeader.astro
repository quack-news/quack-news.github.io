---
import { Image } from 'astro:assets';
import footprints from '../../assets/duck-footprints.svg';

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="section-header-container">
  <div class="title-wrapper">
    <Image src={footprints} alt="" class="footprints-icon" />
    <h2 class="section-header">{title}</h2>
  </div>
  <div class="header-line"></div>
</div>

<style>
  .section-header-container {
    margin: 2rem 0 2rem 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .title-wrapper {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    position: relative;
  }

  .footprints-icon {
    width: 32px;
    height: 32px;
    opacity: 0.9;
    transform: rotate(-15deg);
    filter: sepia(1) saturate(5) hue-rotate(-20deg); /* Faz ficar laranjinha */
  }

  .section-header {
    font-family: var(--font-display);
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    color: #3d3522;
    margin: 0;
    line-height: 1.2;
  }

  .header-line {
    height: 4px;
    width: 100%;
    max-width: 150px;
    background: linear-gradient(90deg, #ff8a00, #e52e71);
    border-radius: 2px;
    margin-top: 0.3rem;
    margin-left: 2.8rem; /* Alinha com o início do texto, pulando o ícone */
  }

  @media (max-width: 480px) {
    .footprints-icon {
      width: 24px;
      height: 24px;
    }
    .header-line {
      margin-left: 2.3rem;
      max-width: 100px;
    }
  }
</style>
