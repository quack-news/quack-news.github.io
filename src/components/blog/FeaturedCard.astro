---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  item:
    | CollectionEntry<'noticias'>
    | CollectionEntry<'receitas'>
    | CollectionEntry<'midias'>
    | CollectionEntry<'fatos-aleatorios'>;
  categoryLabel: string;
  categoryColor?: string;
}

const { item, categoryLabel, categoryColor = '#ff8a00' } = Astro.props;

const url = `/${item.collection}/${item.slug}/`;
const cardImage = 'image' in item.data ? item.data.image : undefined;
const cardDescription =
  'description' in item.data ? item.data.description : undefined;
---

<a href={url} class="featured-card">
  <div class="featured-image-container">
    {
      cardImage && (
        <Image
          src={cardImage.src}
          alt={cardImage.alt || item.data.title}
          width={1200}
          height={600}
          class="featured-image"
          loading="eager"
        />
      )
    }
    <div class="featured-category" style={`background-color: ${categoryColor}`}>
      {categoryLabel}
    </div>
  </div>
  <div class="featured-content">
    <h3 class="featured-title">{item.data.title}</h3>
    {cardDescription && <p class="featured-description">{cardDescription}</p>}
  </div>
</a>

<style>
  .featured-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: #3d3522;
    background-color: #fff;
    border-radius: 24px;
    border: 3px solid #3d3522;
    box-shadow: 8px 8px 0px #3d3522;
    overflow: hidden;
    transition:
      transform 0.2s ease-out,
      box-shadow 0.2s ease-out;
    margin-bottom: 2rem;
  }

  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: 12px 12px 0px #3d3522;
  }

  .featured-image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-bottom: 3px solid #3d3522;
  }

  .featured-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .featured-card:hover .featured-image {
    transform: scale(1.05);
  }

  .featured-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.5rem 1.2rem;
    border-radius: 50px;
    color: white;
    font-family: var(--font-sans);
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.9rem;
    border: 2px solid #3d3522;
    box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
  }

  .featured-content {
    padding: 2rem;
  }

  .featured-title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    line-height: 1.1;
  }

  .featured-description {
    font-family: var(--font-text);
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  @media (max-width: 768px) {
    .featured-title {
      font-size: 1.8rem;
    }
  }
</style>
