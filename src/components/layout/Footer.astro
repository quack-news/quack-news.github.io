---
import { SITE_TITLE } from "../../consts";
const today = new Date();

import DuckFootprints from "../../assets/duck-footprints.svg";
---

<footer class="main-footer">
    <div class="footer-wave-container">
        <svg
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
        >
            <path
                d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
                class="shape-fill"></path>
        </svg>
    </div>

    <div class="footer-content">
        <div class="copyright-text">
            &copy; {today.getFullYear()}
            <strong>{SITE_TITLE}</strong>. Todos os direitos reservados.
        </div>

        <div class="duck-footprints">
            <DuckFootprints class="footprint-1" width={20} height={20} />
            <DuckFootprints class="footprint-2" width={20} height={20} />
            <DuckFootprints class="footprint-3" width={20} height={20} />
        </div>

        <div class="social-links">
            <a href="#" aria-label="Nosso X/Twitter">X</a>
            <a href="#" aria-label="Nosso Instagram">Insta</a>
            <a href="#" aria-label="Nosso Github">Git</a>
        </div>
    </div>
</footer>

<style>
    .main-footer {
        position: relative;
        background-color: #f0c400;
        color: #3d3522;

        margin-top: 100px;

        padding-top: 100px;
        padding-bottom: 1.5rem;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
        font-family: var(--font-sans);
    }

    .footer-wave-container {
        position: absolute;
        bottom: 100%;
        left: 0;
        width: 100%;
        line-height: 0;
        z-index: 1;
    }

    .footer-wave-container svg {
        position: relative;
        display: block;
        width: 100%;
        height: 100px; /* Altura da onda */
        transform: rotate(180deg);
    }
    .footer-wave-container .shape-fill {
        fill: #f0c400;
    }

    .footer-content {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
        z-index: 2;
    }

    .copyright-text strong {
        font-family: var(--font-display);
    }

    .duck-footprints {
        transform: scale(1.1);
    }
    .duck-footprints path {
        stroke: #3d3522;
        stroke-width: 2.5;
        fill: transparent;
        stroke-linecap: round;
        stroke-linejoin: round;
        stroke-dasharray: 100;
        stroke-dashoffset: 100;
        animation: draw-and-fill 1s ease-out forwards;
    }

    .footprint-2 {
        animation-delay: 0.3s;
    }
    .footprint-3 {
        animation-delay: 0.6s;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }
    .social-links a {
        color: #3d3522;
        font-weight: bold;
        text-decoration: none;
        font-size: 1.1rem;
        transition:
            transform 0.2s ease,
            color 0.2s ease;
    }
    .social-links a:hover {
        transform: scale(1.15) rotate(-5deg);
        color: #000;
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            justify-content: center;
            gap: 2rem;
        }
        .copyright-text,
        .social-links {
            text-align: center;
        }
        .duck-footprints {
            order: -1;
            margin-bottom: 1rem;
        }
    }

    @keyframes draw-and-fill {
        80% {
            stroke-dashoffset: 0;
            fill: transparent;
        }
        100% {
            stroke-dashoffset: 0;
            fill: #3d3522;
        }
    }
</style>
